pkgname=libarchive
pkgver=3.1.2
pkgrel=1
pkgdesc="An archive processing library."
arch=("x86_64")
url="http://www.libarchive.org"
license=("BSD")

depends=('glibc' 'acl' 'attr' 'bzip2' 'expat' 'lzo' 'openssl' 'xz' 'zlib')
makedepends=('autoconf' 'automake' 'bash')

source=(git+https://github.com/wolfbox/libarchive.git#commit=658b4bf)
sha256sums=(SKIP)

build() {
	cd "${srcdir}/${pkgname}"
	./build/autogen.sh
	./configure --prefix=/usr --libdir=/usr/lib/${MULTIARCH} --sysconfdir=/etc \
			    --localstatedir=/var --mandir=/usr/man --disable-static
	make
}

package() {
	cd "${srcdir}/${pkgname}"
	make DESTDIR="${pkgdir}" install
}
