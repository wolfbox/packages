pkgname=libgcrypt
pkgver=1.5.4
pkgrel=1
pkgdesc="A low-level general-purpose cryptographic library."
arch=('x86_64')
url="http://www.gnu.org/software/libgcrypt/"
license=('GPLv2' 'LGPLv2.1')

depends=('glibc' 'libgpg-error')

source=(ftp://ftp.gnupg.org/gcrypt/libgcrypt/libgcrypt-${pkgver}.tar.bz2)
sha256sums=(d5f88d9f41a46953dc250cdb8575129b37ee2208401b7fa338c897f667c7fb33)

build() {
	cd "${srcdir}/${pkgname}-${pkgver}"
	./configure --prefix=/usr --libdir=/usr/lib/${MULTIARCH} --infodir=/usr/info \
	            --enable-shared=yes --enable-static=no
	make
}

package() {
	cd "${srcdir}/${pkgname}-${pkgver}"
	make DESTDIR="${pkgdir}" install
}
