pkgname=libjpeg-turbo
pkgver=1.3.1
pkgrel=1
pkgdesc="A highly-optimized implementation of the JPEG image format"
arch=("x86_64")
url="http://www.libjpeg-turbo.org"
license=('BSD')

conflicts=('libjpeg')
depends=('glibc')

source=(http://downloads.sourceforge.net/project/libjpeg-turbo/${pkgver}/libjpeg-turbo-${pkgver}.tar.gz)
sha256sums=('c132907417ddc40ed552fe53d6b91d5fecbb14a356a60ddc7ea50d6be9666fb9')

build() {
	cd "${srcdir}/${pkgname}-${pkgver}"
	./configure --prefix=/usr \
	            --libdir=/usr/lib/${MULTIARCH}
	make
}

package() {
	cd "${srcdir}/${pkgname}-${pkgver}"
	make install DESTDIR="${pkgdir}"
	
	mkdir -p "${pkgdir}"/usr/doc/${pkgname}-${pkgver}
	install -m644 README* "${pkgdir}"/usr/doc/${pkgname}-${pkgver}/
	rm -rf "${pkgdir}"/usr/share
}
