pkgname=musl
pkgver=1.1.5
pkgrel=1
pkgdesc="A lightweight, fast, simple, free, and correct libc"
arch=("x86_64")
url="http://www.musl-libc.org"
license=("BSD")
options=('staticlibs')

source=(http://www.musl-libc.org/releases/musl-${pkgver}.tar.gz)
sha256sums=(352362b1724cc9740f4c3ce0fe02aae45e4de9809ea4ac961f31aedc11b87393)

build() {
	cd "${srcdir}/${pkgname}-${pkgver}"

	export CFLAGS="-O2"
	export CPPFLAGS=""

	./configure --prefix=/usr \
	            --libdir=/usr/lib/${MULTIARCH}/musl \
	            --syslibdir=/lib/${MULTIARCH} \
	            --includedir=/usr/include/musl \
			    --enable-shared \
			    --enable-static
	make
}

package() {
	cd "${srcdir}/${pkgname}-${pkgver}"
	make DESTDIR="${pkgdir}" install
}
