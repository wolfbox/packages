pkgname=gnutls
pkgver=3.2.19
pkgrel=1
pkgdesc="The GNU TLS library"
arch=("x86_64")
url="http://www.gnu.org/software/gnutls/"
license=('GPLv3' 'LGPLv2.1')

depends=('glibc' 'guile' 'zlib' 'nettle')

source=(ftp://ftp.gnutls.org/gcrypt/gnutls/v3.2/gnutls-${pkgver}.tar.xz)
sha256sums=('a20d95a434a670afe5ce66430ae56151bbbe14456a0517ce775c46b1d4183dcf')

build() {
	cd "${srcdir}/${pkgname}-${pkgver}"
	./configure --prefix=/usr \
	            --libdir=/usr/lib/${MULTIARCH} \
	            --enable-static=no \
	            --with-included-libtasn1
	make
}

package() {
	cd "${srcdir}/${pkgname}-${pkgver}"
	make DESTDIR="${pkgdir}" install
}
