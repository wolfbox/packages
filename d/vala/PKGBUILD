pkgname=vala
_basever=0.26
pkgver=${_basever}.1
pkgrel=1
pkgdesc="The GObject programming language compiler."
arch=("x86_64")
url="https://wiki.gnome.org/Projects/Vala"
license=('LGPLv2.1')

makedepends=('libxslt')
depends=('glib2' 'libffi')

source=(http://download.gnome.org/sources/vala/${_basever}/vala-${pkgver}.tar.xz)
sha256sums=('8407abb19ab3a58bbfc0d288abb47666ef81f76d0540258c03965e7545f59e6b')

build() {
	cd "${srcdir}/${pkgname}-${pkgver}"
	./configure --prefix=/usr \
	            --libdir=/usr/lib/${MULTIARCH} \
	            --mandir=/usr/man \
	            --infodir=/usr/info
	make
}

package() {
	cd "${srcdir}/${pkgname}-${pkgver}"

	make install DESTDIR="${pkgdir}"
}
