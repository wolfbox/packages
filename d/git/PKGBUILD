pkgname=git
pkgver=2.1.2
pkgrel=1
pkgdesc="A free and fast distributed version control system."
arch=("x86_64")
url="http://git-scm.com"
license=('GPLv2')

depends=('glibc' 'zlib' 'openssl' 'perl')

source=(http://www.kernel.org/pub/software/scm/git/git-${pkgver}.tar.xz)
sha256sums=(7b27c8978bccf436f3c2b8c6142f35b236edd34ef7c778b1333166c098c7a18b)

build() {
	cd "${srcdir}/${pkgname}-${pkgver}"
	make prefix=/usr gitexecdir=/usr/lib/${MULTIARCH}/git-core all
}

package() {
	cd "${srcdir}/${pkgname}-${pkgver}"

	make prefix=/usr install DESTDIR="${pkgdir}"
}
