pkgname=automake
pkgver=1.14.1
pkgrel=1
pkgdesc="The GNU Makefile generator."
arch=("x86_64")
url="http://www.gnu.org/software/automake/"
license=('GPLv2')

depends=('perl')

source=(http://ftp.gnu.org/gnu/automake/automake-${pkgver}.tar.xz)
sha256sums=(a9b4f04b8b69cac2e832a38a718943aa976dbdad0097211f8b3448afdacf0669)

build() {
	cd "${srcdir}/${pkgname}-${pkgver}"
	./configure --prefix=/usr --mandir=/usr/man --docdir=/usr/doc/${pkgname}-${pkgver}
	make
}

package() {
	cd "${srcdir}/${pkgname}-${pkgver}"
	make install DESTDIR="${pkgdir}"

	mkdir -p "${pkgdir}"/usr/share/aclocal
}
