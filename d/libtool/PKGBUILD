pkgname=libtool
pkgver=2.4.3
pkgrel=1
pkgdesc="A generic shared library support library."
arch=("x86_64")
url="https://www.gnu.org/software/libtool"
license=('GPLv2')

depends=('glibc' 'm4')

source=(http://ftpmirror.gnu.org/libtool/libtool-${pkgver}.tar.xz)
sha256sums=(65f940fbcb5f0727b10d759898afa35307b24c0945fb12f3f8387f5adb862ceb)

build() {
	cd "${srcdir}/${pkgname}-${pkgver}"
	./configure --prefix=/usr \
	            --libdir=/usr/lib/${MULTIARCH} \
	            --infodir=/usr/info \
	            --mandir=/usr/man \
	            --docdir=/usr/doc/libtool-${pkgver} \
	            --build=${CHOST}
	make
}

package() {
	cd "${srcdir}/${pkgname}-${pkgver}"

	make install DESTDIR="${pkgdir}"
}
