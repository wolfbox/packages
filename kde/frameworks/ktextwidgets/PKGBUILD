pkgname=ktextwidgets
pkgver=5.7.0
pkgrel=1
pkgdesc='KDE text editing widget component'
arch=('x86_64')
url='https://projects.kde.org/projects/kdesupport/extra-cmake-modules'
license=('LGPLv2.1')

makedepends=('cmake' 'extra-cmake-modules')
depends=('gcc-libs' 'glibc' 'qt5' 'ki18n' 'kservice' "sonnet>=${pkgver}" 'kconfigwidgets'
         'kwindowsystem' 'kiconthemes' "kcompletion>=${pkgver}" 'kcoreaddons' 'kconfig'
         'kwidgetsaddons')

source=(http://download.kde.org/stable/frameworks/5.7/${pkgname}-${pkgver}.tar.xz)
sha256sums=('45c97495dabf59cb77e4b3d0388bc42aee1e82f75f13a398908b0afb58aa107a')

build() {
  mkdir -p build && cd build
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=lib/${MULTIARCH} \
    -DLIBEXEC_INSTALL_DIR=lib/${MULTIARCH} \
    -DQML_INSTALL_DIR=lib/${MULTIARCH}/qt/qml \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
    -DCMAKE_BUILD_TYPE=Release

  make
}

package() {
  cd build
  make DESTDIR="${pkgdir}" install
}
