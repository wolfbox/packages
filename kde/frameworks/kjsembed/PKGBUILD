pkgname=kjsembed
pkgver=5.7.0
pkgrel=1
pkgdesc='KDE plugin framework for handling desktop services'
arch=('x86_64')
url='https://projects.kde.org/projects/frameworks/kservice'
license=('GPL2' 'LGPL2.1')

makedepends=('cmake' 'extra-cmake-modules')
depends=('gcc-libs' 'glibc' 'qt5' 'kjs')

source=(http://download.kde.org/stable/frameworks/5.7/portingAids/${pkgname}-${pkgver}.tar.xz)
sha256sums=('8daa6a8929495d7cc5f335291ba481b9fe778fe4e6389a911628384e3069279c')

build() {
  mkdir -p build && cd build
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=lib/${MULTIARCH} \
    -DCMAKE_BUILD_TYPE=Release

  make
}

package() {
  cd build
  make DESTDIR="${pkgdir}" install
}
