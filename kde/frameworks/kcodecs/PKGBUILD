pkgname=kcodecs
pkgver=5.16.0
pkgrel=1
pkgdesc='The KDE string encoding component'
arch=('x86_64')
url='https://projects.kde.org/projects/kdesupport/extra-cmake-modules'
license=('GPLv2' 'LGPLv2.1')

makedepends=('cmake' "extra-cmake-modules>=${pkgver}" 'qt5-tools')
depends=('gcc-libs' 'glibc' 'qt5')

source=(http://download.kde.org/stable/frameworks/5.16/${pkgname}-${pkgver}.tar.xz)
sha256sums=('97d10cc6166b75da514c1d62f42226edccdcdae50fb65e76a2f02c7cab919e98')

build() {
  mkdir -p build && cd build
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=lib/${MULTIARCH} \
    -DLIBEXEC_INSTALL_DIR=lib/${MULTIARCH} \
    -DQML_INSTALL_DIR=lib/${MULTIARCH}/qt/qml \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
    -DCMAKE_BUILD_TYPE=Release

  make
}

package() {
  cd build
  make DESTDIR="${pkgdir}" install
}
