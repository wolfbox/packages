pkgname=kauth
pkgver=5.7.0
pkgrel=1
pkgdesc='KDE component for executing privileged actions'
arch=('x86_64')
url='https://projects.kde.org/projects/frameworks/kauth'
license=('LGPL2.1')

makedepends=('cmake' 'extra-cmake-modules')
depends=('kcoreaddons' 'qt5' 'polkit-qt5' "kcoreaddons>=${pkgver}")

source=(http://download.kde.org/stable/frameworks/5.7/${pkgname}-${pkgver}.tar.xz)
sha256sums=('e2c1830c04f677389dbaaf8fc42360b8157bc03ab933e9da6de3b2fbd4caa488')

build() {
  mkdir -p build && cd build
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=lib/${MULTIARCH} \
    -DLIBEXEC_INSTALL_DIR=lib/${MULTIARCH} \
    -DQML_INSTALL_DIR=lib/${MULTIARCH}/qt/qml \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
    -DCMAKE_BUILD_TYPE=Release

  make
}

package() {
  cd build
  make DESTDIR="${pkgdir}" install
}
