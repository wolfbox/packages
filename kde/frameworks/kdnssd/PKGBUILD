pkgname=kdnssd
pkgver=5.7.0
pkgrel=1
pkgdesc='KDE network service discovery with ZeroConf'
arch=('x86_64')
url='https://projects.kde.org/projects/frameworks/kdnssd'
license=('LGPL2.1')

makedepends=('cmake')
depends=('glibc' 'gcc-libs' 'qt5' 'avahi')

source=(http://download.kde.org/stable/frameworks/5.7/${pkgname}-${pkgver}.tar.xz)
sha256sums=('be8d50b670603366e87b577b62f2c56e505c974c360f8c7ef9d23a8130651988')

build() {
  mkdir -p build && cd build
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=lib/${MULTIARCH} \
    -DCMAKE_BUILD_TYPE=Release

  make
}

package() {
  cd build
  make DESTDIR="${pkgdir}" install
}
