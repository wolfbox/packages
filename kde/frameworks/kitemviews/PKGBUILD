pkgname=kitemviews
pkgver=5.7.0
pkgrel=1
pkgdesc='KDE component for item views'
arch=('x86_64')
url='https://projects.kde.org/projects/frameworks/kitemviews'
license=('GPLv2' 'LGPLv2.1')

makedepends=('cmake' 'extra-cmake-modules' 'qt5-tools')
depends=('glibc' 'gcc-libs' 'qt5')

source=(http://download.kde.org/stable/frameworks/5.7/${pkgname}-${pkgver}.tar.xz)
sha256sums=('0619256e295038173d7f028a281cd59ed8125599e61e492855046d7b248566c5')

build() {
  mkdir -p build && cd build
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=lib/${MULTIARCH} \
    -DLIBEXEC_INSTALL_DIR=lib/${MULTIARCH} \
    -DQML_INSTALL_DIR=lib/${MULTIARCH}/qt/qml \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
    -DCMAKE_BUILD_TYPE=Release

  make
}

package() {
  cd build
  make DESTDIR="${pkgdir}" install
}
