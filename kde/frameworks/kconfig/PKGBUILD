pkgname=kconfig
pkgver=5.7.0
pkgrel=1
pkgdesc='KDE configuration framework'
arch=('x86_64')
url='https://projects.kde.org/projects/kdesupport/extra-cmake-modules'
license=('LGPLv2.1')

makedepends=('cmake' 'extra-cmake-modules' 'qt5-tools')
depends=('glibc' 'qt5')

source=(http://download.kde.org/stable/frameworks/5.7/${pkgname}-${pkgver}.tar.xz)
sha256sums=('f065f8fc2368bd529c0ebb0cec5b95857a1fa2b78fd2e363df61e1df77f96d57')

build() {
  mkdir -p build && cd build
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=lib/${MULTIARCH} \
    -DLIBEXEC_INSTALL_DIR=lib/${MULTIARCH} \
    -DQML_INSTALL_DIR=lib/${MULTIARCH}/qt/qml \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
    -DCMAKE_BUILD_TYPE=Release

  make
}

package() {
  cd build
  make DESTDIR="${pkgdir}" install
}
