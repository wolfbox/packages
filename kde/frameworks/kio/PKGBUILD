pkgname=kio
pkgver=5.7.0
pkgrel=1
pkgdesc='KDE network transparent I/O framework'
arch=('x86_64')
url='https://projects.kde.org/projects/frameworks/kio'
license=('LGPLv2.1')

makedepends=('cmake' 'extra-cmake-modules')
depends=('glibc' 'gcc-libs' 'qt5' "kbookmarks>=${pkgver}" "kjobwidgets>=${pkgver}" 'knotifications'
         "solid>=${pkgver}" "kwallet>=${pkgver}" 'acl' 'ki18n' "kservice>=${pkgver}" 'kconfig' 'kdbusaddons'
         'kcoreaddons' 'kiconthemes' 'kcompletion' 'kwindowsystem' 'kcodecs'
         "karchive>=${pkgver}")

source=(http://download.kde.org/stable/frameworks/5.7/${pkgname}-${pkgver}.tar.xz)
sha256sums=('f47284fbd03bd4f7fdb3eed9f6d67c2741628517bc82c822c4f9e5409c1bc475')

build() {
  mkdir -p build && cd build
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=lib/${MULTIARCH} \
    -DLIBEXEC_INSTALL_DIR=lib/${MULTIARCH}/kf5 \
    -DQML_INSTALL_DIR=lib/${MULTIARCH}/qt/qml \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
    -DCMAKE_BUILD_TYPE=Release

  make
}

package() {
  cd build
  make DESTDIR="${pkgdir}" install
}
