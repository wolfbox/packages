pkgname=karchive
pkgver=5.7.0
pkgrel=1
pkgdesc='The KDE archive management component'
arch=('x86_64')
url='https://projects.kde.org/projects/frameworks/karchive'
license=('GPLv2' 'LGPLv2.1')

makedepends=('cmake' 'extra-cmake-modules')
depends=('gcc-libs' 'glibc' 'qt5' 'zlib' 'bzip2' 'xz')

source=(http://download.kde.org/stable/frameworks/5.7/${pkgname}-${pkgver}.tar.xz)
sha256sums=('b8d66164eab8c262f1ee5da9f595c2b8de9878d5ac992070b2c9ad736825f85e')

build() {
  mkdir -p build && cd build
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=lib/${MULTIARCH} \
    -DLIBEXEC_INSTALL_DIR=lib/${MULTIARCH} \
    -DQML_INSTALL_DIR=lib/${MULTIARCH}/qt/qml \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
    -DCMAKE_BUILD_TYPE=Release

  make
}

package() {
  cd build
  make DESTDIR="${pkgdir}" install
}
