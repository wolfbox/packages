pkgname=kdoctools
pkgver=5.7.0
pkgrel=1
pkgdesc='KDE DocBook documentation generator'
arch=('x86_64')
url='https://projects.kde.org/projects/frameworks/kdoctools'
license=('LGPLv2.1')

makedepends=('cmake' 'extra-cmake-modules')
depends=('glibc' 'gcc-libs' 'karchive' 'ki18n' 'docbook-xsl' 'libxml2'
         'libxslt')

source=(http://download.kde.org/stable/frameworks/5.7/${pkgname}-${pkgver}.tar.xz)
sha256sums=('b125d7b2654cbbe6ba0f5eaf7773f688c54ba4bd048046f7a2134b3954869a06')

build() {
  mkdir -p build && cd build
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=lib/${MULTIARCH} \
    -DLIBEXEC_INSTALL_DIR=lib/${MULTIARCH} \
    -DQML_INSTALL_DIR=lib/${MULTIARCH}/qt/qml \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
    -DCMAKE_BUILD_TYPE=Release

  make
}

package() {
  cd build
  make DESTDIR="${pkgdir}" install
}
