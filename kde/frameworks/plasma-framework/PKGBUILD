pkgname=plasma-framework
pkgver=5.7.0
pkgrel=1
pkgdesc='The base library for the KDE desktop'
arch=('x86_64')
url='https://projects.kde.org/projects/frameworks/plasma-framework'
license=('GPL2' 'LGPL2.1')

makedepends=('cmake' 'extra-cmake-modules')
depends=('glibc' 'gcc-libs' 'qt5' "kactivities>=${pkgver}" 'kservice' 'karchive'
         'kguiaddons' 'ki18n' 'kio' 'kwindowsystem' 'kdeclarative' 'kxmlgui'
         'kglobalaccel' 'libxcb' 'kconfigwidgets' 'kconfig' 'kcoreaddons'
         'kpackage')

source=(http://download.kde.org/stable/frameworks/5.7/${pkgname}-${pkgver}.tar.xz)
sha256sums=('35345ced57cce80e1089b3172edfd277a0dc5ed4148b9c52a18c2ca0869eb364')

build() {
  mkdir -p build && cd build
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=lib/${MULTIARCH} \
    -DLIBEXEC_INSTALL_DIR=lib/${MULTIARCH} \
    -DQML_INSTALL_DIR=lib/${MULTIARCH}/qt/qml \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
    -DCMAKE_BUILD_TYPE=Release

  make
}

package() {
  cd build
  make DESTDIR="${pkgdir}" install
}
