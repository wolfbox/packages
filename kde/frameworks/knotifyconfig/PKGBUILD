pkgname=knotifyconfig
pkgver=5.7.0
pkgrel=1
pkgdesc='Embeddable configuration dialog for desktop notifications'
arch=('x86_64')
url='https://projects.kde.org/projects/frameworks/knotifyconfig'
license=('LGPL2.1')

makedepends=('cmake' 'extra-cmake-modules')
depends=('glibc' 'gcc-libs' 'qt5' 'ki18n' 'kio' 'phonon-qt5' 'kservice'
         'kcompletion')

source=(http://download.kde.org/stable/frameworks/5.7/${pkgname}-${pkgver}.tar.xz)
sha256sums=('dae21941999cbcceeabfa2310cef4cca1c7362872070c9e2d004b473cd145b5f')

build() {
  mkdir -p build && cd build
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=lib/${MULTIARCH} \
    -DCMAKE_BUILD_TYPE=Release \
    -DBUILD_HTML_DOCS=OFF \
    -DWITH_DOC=OFF
  make
}

package() {
  cd build
  make DESTDIR="${pkgdir}" install
}
