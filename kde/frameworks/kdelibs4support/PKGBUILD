pkgname=kdelibs4support
pkgver=5.7.0
pkgrel=1
pkgdesc='Transitionary support package for porting applications from kdelibs to KF5'
arch=('x86_64')
url='https://kde.org'
license=('LGPL2.1')

makedepends=('cmake' 'extra-cmake-modules')
depends=('glibc' 'gcc-libs' 'qt5' "kdesignerplugin>=${pkgver}" "kparts>=${pkgver}"
         "kunitconversion>=${pkgver}")

source=(http://download.kde.org/stable/frameworks/5.7/portingAids/${pkgname}-${pkgver}.tar.xz)
sha256sums=('652508f6e8efaa3923e525644ec0049eaaf3badb073bd3ec5a7f7ad016d086ee')

build() {
  mkdir -p build && cd build
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=on \
    -DLIB_INSTALL_DIR=lib/${MULTIARCH} \
    -DLIBEXEC_INSTALL_DIR=lib/${MULTIARCH} \
    -DCMAKE_BUILD_TYPE=Release \
    -DBUILD_HTML_DOCS=OFF \
    -DWITH_DOC=OFF
  make
}

package() {
  cd build
  make DESTDIR="${pkgdir}" install
}
