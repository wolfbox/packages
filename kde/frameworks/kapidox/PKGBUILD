pkgname=kapidox
pkgver=5.7.0
pkgrel=1
pkgdesc='KDE tools for generating API documentation'
arch=('any')
url='https://projects.kde.org/projects/frameworks/kapidox'
license=('BSD')

makedepends=('cmake')
depends=('python')

source=(http://download.kde.org/stable/frameworks/5.7/${pkgname}-${pkgver}.tar.xz)
sha256sums=('8dfb597b4e8d8123bcdb8cca01270140f807fc31ecb828c2ca017e8a8c0a69ff')

build() {
  mkdir -p build && cd build
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release \
    -DBUILD_HTML_DOCS=OFF \
    -DWITH_DOC=OFF
  make
}

package() {
  cd build
  make DESTDIR="${pkgdir}" install
}
