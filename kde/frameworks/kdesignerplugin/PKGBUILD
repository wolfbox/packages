pkgname=kdesignerplugin
pkgver=5.7.0
pkgrel=1
pkgdesc='A set of KDE plugins for the Qt Designer'
arch=('x86_64')
url='https://projects.kde.org/projects/frameworks/kdesignerplugin'
license=('LGPL2.1')

makedepends=('cmake' 'extra-cmake-modules')
depends=('glibc' 'gcc-libs' 'qt5' 'kconfig' 'kcoreaddons')

source=(http://download.kde.org/stable/frameworks/5.7/${pkgname}-${pkgver}.tar.xz)
sha256sums=('f814bf2cdaee63be39e94d57ef72434276bd4146f730cc97a33745fc5395de78')

build() {
  mkdir -p build && cd build
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=lib/${MULTIARCH} \
    -DCMAKE_BUILD_TYPE=Release \
    -DBUILD_HTML_DOCS=OFF \
    -DWITH_DOC=OFF
  make
}

package() {
  cd build
  make DESTDIR="${pkgdir}" install
}
