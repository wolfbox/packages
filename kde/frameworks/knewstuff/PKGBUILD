pkgname=knewstuff
pkgver=5.7.0
pkgrel=1
pkgdesc='KDE support library for downloading application assets'
arch=('x86_64')
url='https://projects.kde.org/projects/frameworks/knewstuff'
license=('LGPL2.1')

makedepends=('cmake' 'extra-cmake-modules')
depends=('glibc' 'gcc-libs' 'qt5' 'attica' 'kxmlgui' 'kio' 'karchive'
         'kcompletion' 'ki18n' 'kitemviews' 'kiconthemes' 'ktextwidgets'
         'kconfig' 'kcoreaddons' 'kwidgetsaddons')

source=(http://download.kde.org/stable/frameworks/5.7/${pkgname}-${pkgver}.tar.xz)
sha256sums=('f439a71807d49d24d9edbaf9bdb1ea37551b17181caa8a854552603fc573e371')

build() {
  mkdir -p build && cd build
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=lib/${MULTIARCH} \
    -DLIBEXEC_INSTALL_DIR=lib/${MULTIARCH} \
    -DQML_INSTALL_DIR=lib/${MULTIARCH}/qt/qml \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
    -DCMAKE_BUILD_TYPE=Release

  make
}

package() {
  cd build
  make DESTDIR="${pkgdir}" install
}
