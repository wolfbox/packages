pkgname=kxmlgui
pkgver=5.7.0
pkgrel=1
pkgdesc='KDE framework for managing menu and toolbar items'
arch=('x86_64')
url='https://projects.kde.org/projects/frameworks/kxmlgui'
license=('GPLv2' 'LGPLv2.1')

makedepends=('cmake' 'extra-cmake-modules')
depends=('glibc' 'gcc-libs' 'qt5' 'kconfig' "ktextwidgets>=${pkgver}" 'kitemviews' 'ki18n'
         'attica' 'kiconthemes' 'kwidgetsaddons' "kglobalaccel>=${pkgver}" 'kwindowsystem'
         'kcoreaddons')

source=(http://download.kde.org/stable/frameworks/5.7/${pkgname}-${pkgver}.tar.xz)
sha256sums=('0687ba5cf1a6dbd5cb699a48fa8793c132f8bbc9746662efc82610b4058cfcfe')

build() {
  mkdir -p build && cd build
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=lib/${MULTIARCH} \
    -DLIBEXEC_INSTALL_DIR=lib/${MULTIARCH} \
    -DQML_INSTALL_DIR=lib/${MULTIARCH}/qt/qml \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
    -DCMAKE_BUILD_TYPE=Release

  make
}

package() {
  cd build
  make DESTDIR="${pkgdir}" install
}
