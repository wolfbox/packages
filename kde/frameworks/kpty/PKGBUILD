pkgname=kpty
pkgver=5.7.0
pkgrel=1
pkgdesc='KDE interface to pseudo-terminal devices'
arch=('x86_64')
url='https://projects.kde.org/projects/frameworks/kpty'
license=('GPL2' 'LGPL2.1')

makedepends=('cmake')
depends=('glibc' 'gcc-libs' 'libutempter' 'qt5' 'kcoreaddons' 'ki18n')

source=(http://download.kde.org/stable/frameworks/5.7/${pkgname}-${pkgver}.tar.xz)
sha256sums=('602b305ade4e2499cbc29273e3ecb54c315925652ba3b657c7bed597ff0de169')

build() {
  mkdir -p build && cd build
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=lib/${MULTIARCH} \
    -DLIBEXEC_INSTALL_DIR=lib/${MULTIARCH} \
    -DQML_INSTALL_DIR=lib/${MULTIARCH}/qt/qml \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
    -DCMAKE_BUILD_TYPE=Release

  make
}

package() {
  cd build
  make DESTDIR="${pkgdir}" install
}
