pkgname=kded
pkgver=5.7.0
pkgrel=1
pkgdesc='The KDE daemon'
arch=('x86_64')
url='https://projects.kde.org/projects/frameworks/kded'
license=('LGPL2.1')

makedepends=('cmake' 'extra-cmake-modules')
depends=('glibc' 'gcc-libs' 'qt5' "kinit>=${pkgver}" 'kcoreaddons' 'kdbusaddons' 'kcrash'
         'kconfig' 'kservice')

source=(http://download.kde.org/stable/frameworks/5.7/${pkgname}-${pkgver}.tar.xz)
sha256sums=('e3fe0ef4adcf13b51944b52835ab886e8572dc82fa177a7d1fc4337563a38604')

build() {
  mkdir -p build && cd build
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=lib/${MULTIARCH} \
    -DLIBEXEC_INSTALL_DIR=lib/${MULTIARCH} \
    -DQML_INSTALL_DIR=lib/${MULTIARCH}/qt/qml \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
    -DCMAKE_BUILD_TYPE=Release

  make
}

package() {
  cd build
  make DESTDIR="${pkgdir}" install
}
