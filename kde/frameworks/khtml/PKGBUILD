pkgname=khtml
pkgver=5.7.0
pkgrel=1
pkgdesc='KDE HTML library'
arch=('x86_64')
url='https://projects.kde.org/projects/frameworks/khtml'
license=('GPL3' 'LGPL2.1')

makedepends=('cmake' 'extra-cmake-modules')
depends=('giflib' 'kparts' 'kjs')

source=("http://download.kde.org/stable/frameworks/${pkgver%.*}/portingAids/${pkgname}-${pkgver}.tar.xz")
sha256sums=('260ab3bfd6214e3d03fc1c58a22bad05f964ebef3f77f8448145736b3e46993a')

prepare() {
  mkdir -p build
}

build() {
  cd build
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=lib/${MULTIARCH} \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
    -DBUILD_TESTING=OFF
  make
}

package() {
  cd build
  make DESTDIR="${pkgdir}" install
}
