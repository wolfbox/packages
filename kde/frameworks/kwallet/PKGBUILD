pkgname=kwallet
pkgver=5.7.0
pkgrel=1
pkgdesc='KDE framework for storing passwords'
arch=('x86_64')
url='https://projects.kde.org/projects/frameworks/kwallet'
license=('LGPLv2.1')

makedepends=('cmake' 'extra-cmake-modules')
depends=('gcc-libs' 'glibc' 'qt5' 'ki18n' 'kcoreaddons' 'kconfig'
         'kiconthemes' 'kservice' 'kdbusaddons' 'kwidgetsaddons'
         'kwindowsystem' "knotifications>=${pkgver}" 'libgcrypt')

source=(http://download.kde.org/stable/frameworks/5.7/${pkgname}-${pkgver}.tar.xz)
sha256sums=('30b06d87cc1e66728d0707cdf35aa6bf198b299b16d29a795f26ef060f6b75a5')

build() {
  mkdir -p build && cd build
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=lib/${MULTIARCH} \
    -DLIBEXEC_INSTALL_DIR=lib/${MULTIARCH} \
    -DQML_INSTALL_DIR=lib/${MULTIARCH}/qt/qml \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
    -DCMAKE_BUILD_TYPE=Release

  make
}

package() {
  cd build
  make DESTDIR="${pkgdir}" install
}
