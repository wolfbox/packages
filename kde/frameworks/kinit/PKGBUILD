pkgname=kinit
pkgver=5.7.0
pkgrel=1
pkgdesc='KDE initialization helpers'
arch=('x86_64')
url='https://projects.kde.org/projects/frameworks/kinit'
license=('LGPLv2.1')

makedepends=('cmake' 'extra-cmake-modules')
depends=('glibc' 'gcc-libs' 'qt5' 'kcrash' 'kwindowsystem' 'libx11' "kio>=${pkgver}"
         'ki18n' 'kservice' 'kconfig' 'kcoreaddons')

source=(http://download.kde.org/stable/frameworks/5.7/${pkgname}-${pkgver}.tar.xz)
sha256sums=('a2eb4b356cd940018afa975fd3ddd81384a44aa46a27aa2611c19d83f08ff5bb')

build() {
  mkdir -p build && cd build
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=lib/${MULTIARCH} \
    -DLIBEXEC_INSTALL_DIR=lib/${MULTIARCH} \
    -DQML_INSTALL_DIR=lib/${MULTIARCH}/qt/qml \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
    -DCMAKE_BUILD_TYPE=Release

  make
}

package() {
  cd build
  make DESTDIR="${pkgdir}" install
}
