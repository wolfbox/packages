pkgname=kwindowsystem
pkgver=5.7.0
pkgrel=1
pkgdesc='KDE component for accessing members of the windowing system'
arch=('x86_64')
url='https://projects.kde.org/projects/frameworks/kwindowsystem/'
license=('LGPLv2.1')

makedepends=('cmake' 'extra-cmake-modules')
depends=('gcc-libs' 'glibc' 'qt5' 'libx11' 'libxcb' 'libxfixes' 'xcb-util-keysyms')

source=(http://download.kde.org/stable/frameworks/5.7/${pkgname}-${pkgver}.tar.xz)
sha256sums=('73e60b8498dcd2e9ed69370e7b6ff62869f0972c57306f0b3128c54c21b67ac0')

build() {
  mkdir -p build && cd build
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=lib/${MULTIARCH} \
    -DCMAKE_BUILD_TYPE=Release \
    -DBUILD_HTML_DOCS=OFF \
    -DWITH_DOC=OFF
  make
}

package() {
  cd build
  make DESTDIR="${pkgdir}" install
}
