pkgname=kde-cli-tools
pkgver=5.2.0
pkgrel=1
pkgdesc='KDE command line utilities'
arch=('x86_64')
url='https://kde.org'
license=('LGPLv2.1' 'GPLv2')

makedepends=('cmake' 'extra-cmake-modules')
depends=('glibc' 'gcc-libs' 'qt5' 'libx11'
         'kdesu' 'kdelibs4support' 'kwindowsystem' 'kcmutils' 'kiconthemes' 'ki18n')

source=(http://download.kde.org/stable/plasma/${pkgver}/${pkgname}-${pkgver}.tar.xz)
sha256sums=('b812932fdbb17c88326db33669a45fb8f719819e144205ac073d6037518e2353')

build() {
  mkdir -p build && cd build
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=on \
    -DLIB_INSTALL_DIR=lib/${MULTIARCH} \
    -DCMAKE_BUILD_TYPE=Release
  make
}

package() {
  cd build
  make DESTDIR="${pkgdir}" install
}
