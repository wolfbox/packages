pkgname=kinfocenter
pkgver=5.1.95
pkgrel=1
pkgdesc='KDE system information center'
arch=('x86_64')
url='https://kde.org'
license=('GPL2')

makedepends=('cmake' 'extra-cmake-modules' 'mesa')
depends=('glibc' 'gcc-libs' 'qt5' 'libgl' 'wayland' 'pciutils' 'libraw1394')

source=(http://download.kde.org/unstable/plasma/${pkgver}/${pkgname}-${pkgver}.tar.xz)
sha256sums=('d76fb6a9a40d27001870b8a45137b09528eb3b01f2182604c48034b7b1e6ea86')

build() {
  mkdir -p build && cd build
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=on \
    -DLIB_INSTALL_DIR=lib/${MULTIARCH} \
    -DCMAKE_BUILD_TYPE=Release
  make
}

package() {
  cd build
  make DESTDIR="${pkgdir}" install
}
