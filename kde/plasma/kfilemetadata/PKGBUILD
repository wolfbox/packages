pkgname=kfilemetadata
pkgver=5.6.0
pkgrel=1
pkgdesc='Library for extracting data and metadata from files'
arch=('x86_64')
url='https://kde.org'
license=('LGPL2.1' 'LGPL3')

makedepends=('cmake' 'extra-cmake-modules')
depends=('glibc' 'gcc-libs' 'qt5')

source=(http://download.kde.org/stable/plasma/5.2.0/${pkgname}-${pkgver}.tar.xz)
sha256sums=('96a4b5dc68f30ca1f5db773c431d1c1963fe1c6c95f54847e9cb60d10ca3e96d')

build() {
  mkdir -p build && cd build
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=on \
    -DLIB_INSTALL_DIR=lib/${MULTIARCH} \
    -DCMAKE_BUILD_TYPE=Release
  make
}

package() {
  cd build
  make DESTDIR="${pkgdir}" install
}
