pkgname=plasma-desktop
pkgver=5.1.95
pkgrel=1
pkgdesc='The KDE Plasma desktop environment'
arch=('x86_64')
url='https://kde.org'
license=('GPL2')

makedepends=('cmake' 'extra-cmake-modules')
depends=('glibc' 'gcc-libs' 'qt5' 'knotifyconfig' 'knewstuff' 'krunner'
         'kdelibs4support' 'kemoticons' 'kitemmodels' 'kwin' 'plasma-workspace'
         'systemsettings' 'fontconfig' 'pulseaudio' 'libcanberra' 'libusb-compat')

source=(http://download.kde.org/unstable/plasma/${pkgver}/${pkgname}-${pkgver}.tar.xz)
sha256sums=('85b9164084fa289412e6295e527e4a4af8beae581e09ce188a687039c12b689e')

build() {
  mkdir -p build && cd build
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=on \
    -DLIB_INSTALL_DIR=lib/${MULTIARCH} \
    -DLIBEXEC_INSTALL_DIR=lib/${MULTIARCH} \
    -DCMAKE_BUILD_TYPE=Release
  make
}

package() {
  cd build
  make DESTDIR="${pkgdir}" install
}
