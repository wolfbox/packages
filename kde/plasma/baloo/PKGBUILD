pkgname=baloo
pkgver=5.6.0
pkgrel=1
pkgdesc='The KDE file indexing and search framework'
arch=('x86_64')
url='https://kde.org'
license=('LGPLv2.1' 'GPLv2')

makedepends=('cmake' 'extra-cmake-modules')
depends=('glibc' 'gcc-libs' 'qt5' "kfilemetadata=${pkgver}" 'xapian-core')

source=(http://download.kde.org/stable/plasma/5.2.0/${pkgname}-${pkgver}.tar.xz)
sha256sums=('2418194eabe140c432434fdad0224bcc9d735c22960df116ff8668e4e6b5c0df')

build() {
  mkdir -p build && cd build
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=on \
    -DLIB_INSTALL_DIR=lib/${MULTIARCH} \
    -DCMAKE_BUILD_TYPE=Release
  make
}

package() {
  cd build
  make DESTDIR="${pkgdir}" install
}
