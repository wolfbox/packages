pkgname=baloo
pkgver=5.5.95
pkgrel=1
pkgdesc='The KDE file indexing and search framework'
arch=('x86_64')
url='https://kde.org'
license=('LGPLv2.1' 'GPLv2')

makedepends=('cmake' 'extra-cmake-modules')
depends=('glibc' 'gcc-libs' 'qt5' "kfilemetadata=${pkgver}" 'xapian-core')

source=(http://download.kde.org/unstable/plasma/5.1.95/${pkgname}-${pkgver}.tar.xz)
sha256sums=('8a831876d1c0600133b3c5af6519e0ea99deecdf107a64bd36f91966622d1cfa')

build() {
  mkdir -p build && cd build
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=on \
    -DLIB_INSTALL_DIR=lib/${MULTIARCH} \
    -DCMAKE_BUILD_TYPE=Release
  make
}

package() {
  cd build
  make DESTDIR="${pkgdir}" install
}
