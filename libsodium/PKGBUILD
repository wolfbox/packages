pkgname=libsodium
pkgver=1.0.1
pkgrel=1
pkgdesc="A fast and easy-to-use cryptography library."
arch=("x86_64")
url="http://libsodium.org"
license=('ISC')

depends=('glibc')

source=(https://github.com/jedisct1/libsodium/releases/download/${pkgver}/libsodium-${pkgver}.tar.gz)
sha256sums=('c3090887a4ef9e2d63af1c1e77f5d5a0656fadb5105ebb9fb66a302210cb3af5')

build() {
	cd "${srcdir}/${pkgname}-${pkgver}"
	./configure --prefix=/usr --libdir=/usr/lib/${MULTIARCH}
	make
}

package() {
	cd "${srcdir}/${pkgname}-${pkgver}"
	make install DESTDIR="${pkgdir}"
}
