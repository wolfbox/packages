pkgname=patch
pkgver=2.7.1
pkgrel=1
pkgdesc="A tool for applying patches."
arch=("x86_64")
url="http://savannah.gnu.org/projects/patch/"
license=('GPLv3')

depends=('glibc' 'attr')

source=(http://ftpmirror.gnu.org/patch/patch-${pkgver}.tar.xz)
sha256sums=(9124ba46db0abd873d0995c2ca880e81252676bb6c03e0a37dfc5f608a9b0ceb)

build() {
	cd "${srcdir}/${pkgname}-${pkgver}"
	./configure --prefix=/usr \
	            --mandir=/usr/man
	make
}

package() {
	cd "${srcdir}/${pkgname}-${pkgver}"
	make DESTDIR="${pkgdir}" install
}
