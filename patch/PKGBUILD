pkgname=patch
pkgver=2.7.2
pkgrel=1
pkgdesc="A tool for applying patches"
arch=("x86_64")
url="http://savannah.gnu.org/projects/patch/"
license=('GPL3')

depends=('glibc' 'attr')

source=(http://ftpmirror.gnu.org/patch/patch-${pkgver}.tar.xz)
sha256sums=('9a55c7e7415fa789acc45dbe78fe4675b1fa12c1ccb19f1513f69fca3f798a9a')

build() {
	cd ${pkgname}-${pkgver}
	./configure --prefix=/usr
	make
}

package() {
	cd ${pkgname}-${pkgver}
	make DESTDIR="${pkgdir}" install
}
