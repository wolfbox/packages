pkgname=kcodecs
pkgver=5.6.0
pkgrel=1
pkgdesc='The KDE string encoding component'
arch=('x86_64')
url='https://projects.kde.org/projects/kdesupport/extra-cmake-modules'
license=('GPLv2' 'LGPLv2.1')

makedepends=('cmake' 'extra-cmake-modules' 'qt5-tools')
depends=('gcc-libs' 'glibc' 'qt5')

source=(http://download.kde.org/stable/frameworks/5.6/${pkgname}-${pkgver}.tar.xz)
sha256sums=('a6cbd06646a27cf8bd2c08879028942588a08be81009aa14357ce89c103bc4d0')

build() {
  mkdir -p build && cd build
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=lib/${MULTIARCH} \
    -DLIBEXEC_INSTALL_DIR=lib/${MULTIARCH} \
    -DQML_INSTALL_DIR=lib/${MULTIARCH}/qt/qml \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
    -DCMAKE_BUILD_TYPE=Release

  make
}

package() {
  cd build
  make DESTDIR="${pkgdir}" install
}
