post_install() {
	groupadd -r syslog 2>/dev/null || true
	useradd -r -d /var/lib/rsyslog -G syslog rsyslog 2>/dev/null || true
	chown -R rsyslog:rsyslog /var/lib/rsyslog
	chown -R rsyslog:rsyslog /var/run/rsyslog
	chown -R rsyslog:syslog /var/log/syslog
}

post_upgrade() {
	post_install $1
}

post_remove() {
	userdel rsyslog
}
