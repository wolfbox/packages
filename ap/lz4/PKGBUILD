pkgname=lz4
pkgver=r124
pkgrel=1
pkgdesc="An extremely fast compression tool."
arch=("x86_64")
url="https://code.google.com/p/lz4"
license=(BSD)

depends=('glibc')

source=("https://github.com/Cyan4973/lz4/archive/${pkgver}.tar.gz")
sha256sums=('0b1aa010314f34a5a18724edbc1557692dd9b5759c561cb9a474625d90972e02')

build() {
	cd "${srcdir}/${pkgname}-${pkgver}"
	make LIBDIR=/usr/lib/${MULTIARCH}
}

package() {
	cd "${srcdir}/${pkgname}-${pkgver}"

	make install DESTDIR="${pkgdir}" LIBDIR=/usr/lib/${MULTIARCH}
	( cd "${pkgdir}"/usr/
	  mv share/man man )

	DOCSDIR="${pkgdir}/usr/share/doc/lz4-${pkgver}"
	mkdir -p "${DOCSDIR}"
	install -m 644 LICENSE "${DOCSDIR}"
}
