pkgname=gettext
pkgver=0.19.3
pkgrel=1
pkgdesc="The GNU translation system."
arch=('x86_64')
url="http://www.gnu.org/software/gettext/"
license=('GPLv3')

source=(http://ftpmirror.gnu.org/gettext/gettext-${pkgver}.tar.gz)
#sha256sums=(32fc1b85fc249ab81bfc37b942a992c7a34f2e1101357ce0d4591341b9164a0a)
sha256sums=(SKIP)

build() {
	cd "${srcdir}/${pkgname}-${pkgver}"
	./configure --prefix=/usr \
	            --libdir=/usr/lib/${MULTIARCH} \
	            --mandir=/usr/man \
	            --infodir=/usr/info	\
	            --disable-static
	make
}

package() {
	cd "${srcdir}/gettext-${pkgver}"
	make DESTDIR="${pkgdir}" install
	rm -rf "${pkgdir}"/usr/share/doc
}
