pkgname=erlang
pkgver=17.3
pkgrel=1
pkgdesc="A highly concurrent functional programming language."
arch=("x86_64")
url="http://www.erlang.org"
license=('custom')

depends=('glibc')

source=(http://www.erlang.org/download/otp_src_${pkgver}.tar.gz)
sha256sums=('d4be03eb346016f4ca95d53eb9437ffaa6106762f153620dd98cd7f7733b76e4')

_srcname=otp_src_${pkgver}
build() {
	cd "${srcdir}/${_srcname}"
	./configure --prefix=/usr --libdir=/usr/lib/${MULTIARCH}
	make
}

package() {
	cd "${srcdir}/${_srcname}"
	make DESTDIR="${pkgdir}" install
	
	mkdir -p "${pkgdir}"/usr/doc/${pkgname}-${pkgver}
	install -m644 EPLICENCE "${pkgdir}"/usr/doc/${pkgname}-${pkgver}
}
